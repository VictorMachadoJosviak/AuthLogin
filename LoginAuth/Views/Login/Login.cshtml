@model LoginAuth.Models.AppUser
@{
    ViewBag.Title = "Login";
}

<div class="row">

    <div class="col-lg-4">

    </div>
    <div class="col-lg-4">

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <h2>Login</h2>

            <hr />

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "email@example.com" })
            </div>

            <div class="form-group">
                <label>Senha</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "************", type = "password" })
            </div>

            <div class="form-group">
                @Html.CheckBox("permanecerLogado") <label style="margin-left:10px">Permanecer Logado</label>
            </div>

            <input type="submit" class="btn btn-primary btn-block" value="Entrar" />

            <a href="@Url.Action("CreateAccount","Login")" class="btn btn-default btn-block">Criar conta</a> 

        }

    </div>
    <div class="col-lg-4">

    </div>
</div>

