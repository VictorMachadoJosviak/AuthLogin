@model LoginAuth.Models.AppUser
@{
    ViewBag.Title = "CreateAccount";
}

<div class="row">

    <div class="col-lg-4"></div>

    <div class="col-lg-4">


        @using (Html.BeginForm("CreateAccount", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <h2>Criar conta</h2>

            <hr />

            <div class="form-group">
                <label>Nome</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "email@example.com" })
            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "email@example.com" })
            </div>

            <div class="form-group">
                <label>Senha</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "************", type = "password" })
            </div>

            <input type="submit" class="btn btn-primary btn-block" value="Cadastrar" />

            <a href="@Url.Action("Login","Login")" class="btn btn-default btn-block">Login</a>

        }

    </div>
    <div class="col-lg-4"></div>

</div>

